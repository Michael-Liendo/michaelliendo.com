{
  "$schema": "https://biomejs.dev/schemas/1.1.2/schema.json",
  "organizeImports": {
    "enabled": false
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    },
		"ignore":["./src/i18n/**/*"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
		"ignore":["./src/i18n/**/*"]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  }
}
